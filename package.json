{
	"devDependencies": {
		"esbuild": "^0.25.12",
		"npm-run-all": "^4.1.5"
	},
	"scripts": {
		"ext:background": "esbuild app/background.js --bundle --outfile=dist/background.js --format=esm --minify --target=esnext --watch --alias:@shared=./app/shared --alias:@modules=./app/modules --alias:@ats=./app/modules/ats --alias:@jobBoards=./app/modules/jobBoards --alias:@form=./app/modules/form --alias:@services=./app/services",
		"ext:content": "esbuild app/content.js --bundle --outfile=dist/content.js --format=esm --minify --target=esnext --watch --alias:@shared=./app/shared --alias:@modules=./app/modules --alias:@ats=./app/modules/ats --alias:@jobBoards=./app/modules/jobBoards --alias:@form=./app/modules/form --alias:@services=./app/services",
		"ext:modules:ats": "esbuild app/modules/ats/*.js --bundle --outdir=dist/modules/ats --format=esm --minify --target=esnext --watch --alias:@shared=./app/shared --alias:@modules=./app/modules --alias:@ats=./app/modules/ats --alias:@jobBoards=./app/modules/jobBoards --alias:@form=./app/modules/form --alias:@services=./app/services",
		"ext:modules:jobBoards": "esbuild app/modules/jobBoards/*.js --bundle --outdir=dist/modules/jobBoards --format=esm --minify --target=esnext --watch --alias:@shared=./app/shared --alias:@modules=./app/modules --alias:@ats=./app/modules/ats --alias:@jobBoards=./app/modules/jobBoards --alias:@form=./app/modules/form --alias:@services=./app/services",
		"ext:modules": "npm-run-all --parallel ext:modules:ats ext:modules:jobBoards",
		"ext:gmail": "esbuild app/services/gmail.js --bundle --outfile=dist/services/gmail.js --format=esm --minify --target=esnext --watch --alias:@shared=./app/shared --alias:@modules=./app/modules --alias:@ats=./app/modules/ats --alias:@jobBoards=./app/modules/jobBoards --alias:@form=./app/modules/form --alias:@services=./app/services",
		"ext:popup": "esbuild app/ui/popup.js --bundle --outfile=dist/popup.js --format=esm --minify --target=esnext --watch --alias:@shared=./app/shared --alias:@modules=./app/modules --alias:@ats=./app/modules/ats --alias:@jobBoards=./app/modules/jobBoards --alias:@form=./app/modules/form --alias:@services=./app/services",
		"ext:offscreen": "esbuild app/offscreen/offscreen.js --bundle --outfile=dist/offscreen/offscreen.js --format=esm --minify --target=esnext --watch --alias:@shared=./app/shared --alias:@modules=./app/modules --alias:@ats=./app/modules/ats --alias:@jobBoards=./app/modules/jobBoards --alias:@form=./app/modules/form --alias:@services=./app/services",
		"copy:offscreen": "powershell -NoProfile -Command \"$root = Resolve-Path .; New-Item -ItemType Directory -Force -Path $root\\dist\\offscreen | Out-Null; Copy-Item $root\\app\\offscreen\\offscreen.html $root\\dist\\offscreen\\ -Force\"",
		"copy:models": "powershell -NoProfile -Command \"$root = Resolve-Path .; New-Item -ItemType Directory -Force -Path $root\\dist\\models | Out-Null; Copy-Item $root\\app\\models\\* $root\\dist\\models\\ -Recurse -Force\"",
		"generate:core:embeddings": "node ./app/scripts/generateLabelEmbeddings.js",
		"generate:thresholds": "node ./app/scripts/generateThresholds.js",
		"generate:embeddings": "npm-run-all --serial generate:core:embeddings generate:thresholds",
		"ext:core:dev": "npm-run-all --parallel copy:offscreen ext:background ext:content ext:modules ext:gmail ext:popup ext:offscreen",
		"ext:dev": "npm-run-all --parallel copy:models copy:offscreen ext:background ext:content ext:modules ext:gmail ext:popup ext:offscreen",
		"ext:full:dev": "npm-run-all --serial generate:embeddings ext:dev",
		"web:dev": "npm --prefix web run start",
		"preext:dev": "npm-run-all --serial generate:embeddings",
		"dev": "npm-run-all --parallel ext:dev web:dev"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.95.2",
		"@xenova/transformers": "^2.17.2",
		"dotenv": "^17.3.1",
		"jsdom": "^28.0.0",
		"node-fetch": "^3.3.2"
	}
}
